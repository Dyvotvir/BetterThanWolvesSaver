<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.darion.app.controllers.BTWController">
   <children>
      <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="850.0">
         <children>
            <MenuButton mnemonicParsing="false" text="MenuButton">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
                  <CheckMenuItem mnemonicParsing="false" text="Unspecified Action" />
              </items>
            </MenuButton>
            <Label fx:id="btwLabel" text="Better Than Wolves" textFill="WHITE">
               <font>
                  <Font name="Ink Free" size="46.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" layoutY="92.0" prefHeight="100.0" prefWidth="850.0">
         <children>
            <Label fx:id="saverLabel" text="Saver" textFill="LIME">
               <font>
                  <Font name="Ink Free" size="46.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="300.0" prefHeight="150.0" prefWidth="850.0">
         <children>
            <Button fx:id="deleteLastButton" mnemonicParsing="false" onAction="#onDeleteLast" styleClass="deleteLastStyle" text="Delete last">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="deleteAllButton" mnemonicParsing="false" onAction="#onDeleteAll" prefHeight="36.0" prefWidth="116.0" styleClass="deleteAllStyle" text="Delete All">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="createNewButton" mnemonicParsing="false" onAction="#onCreateNew" prefHeight="39.0" prefWidth="130.0" styleClass="createNewStyle" text="Create New">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="overwriteButton" mnemonicParsing="false" onAction="#onOverwrite" prefHeight="39.0" prefWidth="120.0" styleClass="overwriteStyle" text="Overwrite">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="40.0" right="40.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="applyButton" mnemonicParsing="false" onAction="#onApply" prefHeight="39.0" prefWidth="120.0" styleClass="applyStyle" text="Apply">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="-2.0" layoutY="459.0" prefHeight="94.0" prefWidth="850.0">
         <children>
            <Label fx:id="currentFIleLabel" text="Current file:" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="currentFileLabel" text="null" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutY="179.0" prefHeight="121.0" prefWidth="850.0">
         <children>
            <Button fx:id="chooseButton" mnemonicParsing="false" onAction="#onChooseFile" styleClass="chooseFileButton" text="Choose Save File">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin>
            </Button>
            <Label fx:id="chooseLabel" prefHeight="95.0" prefWidth="549.0" text="Choose the saves folder" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </children>
</AnchorPane>
